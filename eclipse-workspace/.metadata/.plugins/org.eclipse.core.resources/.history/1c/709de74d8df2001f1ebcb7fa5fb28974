package StringDemo;

public class Palindrome {
	
	
	public static boolean isPalindrome( String s ) {
		
		
		int i=0,j=s.length()-1;
		
		while(i<=j) {
			
			if ( i==j ) {
				
				i++;
				j--;
			}
			else {
				
				break;
			}
			
		}
		
		
		return true;
		
	}
	

	public static void main(String[] args) {
		
	String	s="tamilselvan";
		
	System.out.println(isPalindrome(s));

	
	}

}
