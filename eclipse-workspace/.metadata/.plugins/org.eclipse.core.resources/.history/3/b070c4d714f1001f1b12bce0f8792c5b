package StringDemo;

public class Streingreveprogram {
	
	public static void main(String[] args) {
		
		
		String n="java program";
		
		char[] arr=n.toCharArray();
		
		System.out.println(arr.length);
		
          for(int i=arr.length-1;i>=0;i--) {
			
			  System.out.print(arr[i]);
			  
			  
			
		                            }
		
	}

}
